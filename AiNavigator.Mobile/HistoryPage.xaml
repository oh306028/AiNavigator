<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AiNavigator.Mobile.HistoryPage"
             Title="Historia">
    <CollectionView x:Name="HistoryCollection">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding RequestDate}" FontAttributes="Bold"/>
                    <Label Text="{Binding Summary}" LineBreakMode="WordWrap"/>
                    <CollectionView ItemsSource="{Binding Models}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Name}" Margin="5"/>
                                    <Label Text="{Binding Rank}" Margin="5"/>
                                    <Label Text="{Binding Category}" Margin="5"/>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
